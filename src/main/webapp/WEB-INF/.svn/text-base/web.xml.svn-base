<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<filter>

		<filter-name>EncodingFilter</filter-name>
		<filter-class>by.satalin.web.filter.EncodingFilter</filter-class>

		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>

	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
	<listener>
		<listener-class>by.satalin.web.servlet.EventListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>by.satalin.web.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BaseDoServlet</servlet-name>
		<servlet-class>by.satalin.web.servlet.BaseDoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BaseDoServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>FlushServlet</servlet-name>
		<servlet-class>by.satalin.web.servlet.FlushServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FlushServlet</servlet-name>
		<url-pattern>*.a</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>